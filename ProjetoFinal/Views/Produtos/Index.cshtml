@model IEnumerable<ProjetoFinal.Models.Produtos>

@{
    ViewData["Title"] = "Produtos";
}

<style>
    #grid th:nth-child(2) {
        width: 150px;
    }
    #grid th:nth-child(3) {
        width: 70px;
    }
    #entrada_produtos .row {
        margin: 15px 0;
    }
</style>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Departamento.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Adicionar" asp-route-id="@item.Id">Adicionar</a> |
                <a asp-action="Remover" asp-route-id="@item.Id">Remover</a> 
            </td>
        </tr>
}
    </tbody>
</table>
